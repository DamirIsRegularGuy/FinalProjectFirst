<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_but"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/strelra"
                app:elevation="0dp" />

            <TextView
                android:id="@+id/preview_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Перевод"
                android:textColor="#000000"
                android:textSize="28dp"
                android:layout_below="@id/back_but"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp">
            </TextView>


        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/numerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="number"
                android:hint="Номер карты получателя"
                android:paddingStart="8dp"
                android:paddingVertical="20dp"
                android:textSize="16dp"
                android:textColor="#565F69"
                android:fontFamily="sans-serif-medium"/>



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/edit_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Сумма"
                android:inputType="number"
                android:paddingStart="8dp"
                android:paddingVertical="20dp"
                android:textSize="16dp"
                android:textColor="#565F69"
                android:fontFamily="sans-serif-medium"/>



        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="20dp">

                <TextView
                    android:id="@+id/kurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Курс"
                    android:textSize="16dp"
                    android:textColor="#565F69"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 TJS = 0.0343 RUB"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_alignParentEnd="true"/>



            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cornerRadius="24dp"
        android:text="Продолжить"
        app:backgroundTint="#DD6018"
        android:textSize="16dp"
        android:paddingVertical="14dp"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>